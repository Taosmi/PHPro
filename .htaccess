# Directory listing is not allowed.
Options -Indexes

# Rewrite engine is a must.
Options +FollowSymLinks
RewriteEngine On
RewriteBase /

# Let the apps static content pass through.
RewriteCond %{REQUEST_URI} ^/webapps/.*/static/
RewriteRule ^ - [L]

# Dodge trailing slashes.
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Everything else is handled by the front controller.
RewriteRule ^ run.php [L]
